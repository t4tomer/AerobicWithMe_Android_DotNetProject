<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AerobicWithMe.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AerobicWithMe.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="login" />



    <ShellContent
        Title="Maps List"
        ContentTemplate="{DataTemplate local:MapsPage}"
        Route="maps" />

    <ShellContent
        Title="User Records List"
        ContentTemplate="{DataTemplate local:UserRecordsPage}"
        Route="user_records_list?trackName={trackName}" />





</Shell>

